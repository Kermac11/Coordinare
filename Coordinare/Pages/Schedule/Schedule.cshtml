<style>
    /* Style the tab */
    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
    }

        /* Style the buttons that are used to open the tab content */
        .tab button {
            background-color: inherit;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
        }

            /* Change background color of buttons on hover */
            .tab button:hover {
                background-color: #ddd;
            }

            /* Create an active/current tablink class */
            .tab button.active {
                background-color: #ccc;
            }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }
</style>

@if (Model.BookedEvents != null || Model.BookedEvents.Count != 0)
{
    <div class="row">
        @foreach (var d in Model.NumOfDates.Select(d => new { Day = d.Day, Month = d.Month }).Distinct())
        {
            <div class="tab">
                <form method="post" asp-page-handler="daYlist">
                    <button value="@d.Day" name="day">
                        <input type="hidden" name="month" value="@d.Month" />
                        <input type="hidden" value="@Model.User.User_ID" asp-for="User.User_ID" />
                        @d.Day/@d.Month
                    </button>
                </form>
                @*<button class="tablinks" onclick="openTab(event, '@d.Day')">@d.Day/@d.Month</button>*@
            </div>
        }
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Start time
                </th>
                <th>
                    Eventname
                </th>
                <th>
                    Room
                </th>
                <th>
                    Time til start
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Event e in @Model.EventList)
            {
                <tr>
                    <td>
                        @e.DateTime.ToString("t")
                    </td>
                    <td>
                        @e.EventName
                    </td>
                    <td>
                        @e.Room_ID
                    </td>
                    <td>
                        @Model.CalculateTime(e.DateTime, DateTime.UtcNow).Result
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Book a spot in an event to have your schedule appear!</p>
}

