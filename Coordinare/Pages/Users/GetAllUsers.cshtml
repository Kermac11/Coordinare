@page
@model Coordinare.Pages.Users.GetAllUsersModel
@{
    ViewData["Title"] = "All users";
}

<p>
    <a asp-page="/Users/Create">Create New User</a>
</p>

<h3>All users</h3>

<table class="table" >
    <thead>
        <tr>
            <th>
                User_ID
            </th>
            <th>
                Name
            </th>
            <th>
                Username
            </th>
            <th>
                Password
            </th>
            <th>
                Phone
            </th>
            <th>
                Email
            </th>
            <th>
                Speaker
            </th>
            <th>
                Specialaid
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Users.Count != 0)
    {
        @foreach (var item in Model.Users)
        {
            <tr>
                <th>
                    @item.User_ID
                </th>
                <th>
                    @item.Name
                </th>
                <th>
                    @item.Username
                </th>
                <th>
                    @item.Password
                </th>
                <th>
                    @item.Phone
                </th>
                <th>
                    @item.Email
                </th>
                <th>
                    @item.Speaker
                </th>
                <th>
                    @item.Specialaid
                </th>
                <td>
                    <p>
                        <a asp-page="/Users/Update" asp-route-id="@item.User_ID">Update</a>
                    </p>
                </td>
                <td>
                    <p>
                        <a asp-page="/Users/Delete" asp-route-hNr="@item.User_ID">Delete</a>
                    </p>
                </td>
            </tr>
        }
    }
    </tbody>
</table>