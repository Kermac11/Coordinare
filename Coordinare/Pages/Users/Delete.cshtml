@page
@model Coordinare.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete user";
}
<h3>Delete User</h3>

<div class="alert alert-warning" role="alert">
    @Model.InfoText
</div>
<form method="post">
    <dl class="row">
        <div class="form-group">
            <label asp-for="@Model.User.User_ID" class="control-label"></label>
            <input asp-for="@Model.User.User_ID" readonly="readonly" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.User.Name" class="control-label"></label>
            <input asp-for="@Model.User.Name" readonly="readonly" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.User.Username" class="control-label"></label>
            <input asp-for="@Model.User.Username" readonly="readonly" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.User.Password" class="control-label"></label>
            <input asp-for="@Model.User.Password" readonly="readonly" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.User.Phone" class="control-label"></label>
            <input asp-for="@Model.User.Phone" readonly="readonly" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.User.Email" class="control-label"></label>
            <input asp-for="@Model.User.Email" readonly="readonly" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.User.Speaker" class="control-label"></label>
            @if (Model.User.Speaker)
            {
                <p>Yes</p>
            }
            else
            {
                <p>No</p>
            }
        </div>
        <div class="form-group">
            <label asp-for="@Model.User.Specialaid" class="control-label"></label>
            @if (Model.User.Specialaid)
            {
                <p>Yes</p>
            }
            else
            {
                <p>No</p>
            }
        </div>
        <div class="form-group">
            <label asp-for="@Model.User.Admin" class="control-label"></label>
            @if (Model.User.Admin)
            {
                <p>Yes</p>
            }
            else
            {
                <p>No</p>
            }
        </div>
    </dl>

    <input type="submit" value="Delete" class="btn btn-danger" />&nbsp; | &nbsp;
    @if (Model.User.Admin)
    {
        <a asp-page="./GetAllUsers">Back to the overview</a>
    }
</form>