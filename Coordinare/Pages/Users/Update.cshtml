@page
@model Coordinare.Pages.Users.UpdateModel
@{
    ViewData["Title"] = "Update user";
}
<h3>Update user information</h3>
<hr />
<div class="alert alert-warning" role="alert">
    @Model.InfoText
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.User.Name" class="control-label"></label>
                <input asp-for="@Model.User.Name" class="form-control" />
                <span asp-validation-for="User.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.Username" class="control-label"></label>
                <input asp-for="@Model.User.Username" class="form-control" />
                <span asp-validation-for="User.Username" class="text-danger"></span>
            </div>
            @*Måske lave password om til autogenereret*@
            <div class="form-group">
                <label asp-for="@Model.User.Password" class="control-label"></label>
                <input asp-for="@Model.User.Password" class="form-control" />
                @*<span asp-validation-for="User.Password" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.Phone" class="control-label"></label>
                <input asp-for="@Model.User.Phone" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="@Model.User.Email" class="control-label"></label>
                <input asp-for="@Model.User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>

            @*ses kun hvis det er admin*@
            @if (@Model.User.Admin)
            {
                <div class="form-group">
                    <label asp-for="@Model.User.Speaker" class="control-label"></label>
                    <input type="radio" asp-for="@Model.User.Speaker" value="true" />Yes
                    <input type="radio" asp-for="@Model.User.Speaker" value="false" />No
                    <span asp-validation-for="User.Speaker" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.User.Specialaid" class="control-label"></label>
                    <input type="radio" asp-for="@Model.User.Specialaid" value="true" />Yes
                    <input type="radio" asp-for="@Model.User.Specialaid" value="false" />No
                    <span asp-validation-for="User.Specialaid" class="text-danger"></span>
                </div>
            }
            else
            {
                @*ses af ikke-admin*@
                <div class="form-group">
                    <label asp-for="@Model.User.Speaker" class="control-label"></label>
                    @if (Model.User.Speaker)
                    {
                        <div style="display: block; margin-left: auto; margin-right: auto; width: 50%;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2-square" viewBox="0 0 16 16">
                                <path d="M3 14.5A1.5 1.5 0 0 1 1.5 13V3A1.5 1.5 0 0 1 3 1.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V8a.5.5 0 0 1 1 0v5a1.5 1.5 0 0 1-1.5 1.5H3z" />
                                <path d="m8.354 10.354 7-7a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z" />
                            </svg>
                        </div>
                    }
                    else
                    {
                        <div style="display: block; margin-left: auto; margin-right: auto; width: 50%;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                            </svg>
                        </div>
                    }
                </div>
                <div class="form-group">
                    <label asp-for="@Model.User.Specialaid" class="control-label"></label>
                    @if (Model.User.Specialaid)
                    {
                        <div style="display: block; margin-left: auto; margin-right: auto; width: 50%;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2-square" viewBox="0 0 16 16">
                                <path d="M3 14.5A1.5 1.5 0 0 1 1.5 13V3A1.5 1.5 0 0 1 3 1.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V8a.5.5 0 0 1 1 0v5a1.5 1.5 0 0 1-1.5 1.5H3z" />
                                <path d="m8.354 10.354 7-7a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z" />
                            </svg>
                        </div>
                    }
                    else
                    {
                        <div style="display: block; margin-left: auto; margin-right: auto; width: 50%;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                            </svg>
                        </div>
                    }
                </div>

            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-dark" />&nbsp; | &nbsp;
                @if (Model.User.Admin)
                {
                    <a asp-page="./GetAllUsers">Back to the overview</a>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}