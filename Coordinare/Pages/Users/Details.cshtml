@page
@model Coordinare.Pages.Users.DetailsModel
@{
    ViewData["Title"] = "Profile";
}

<label asp-for="User.Name" class="control-label"></label>
: @Model.User.Name
<br />
<label asp-for="User.Username" class="control-label"></label>
: @Model.User.Username
<br />
<label asp-for="User.Password" class="control-label"></label>
: @Model.User.Password
<br />
<label asp-for="User.Phone" class="control-label"></label>
: @Model.User.Phone
<br />
<label asp-for="User.Email" class="control-label"></label>
: @Model.User.Email
<br />

<div class="form-group" style="width: 200px">
    <label asp-for="@Model.User.Speaker" class="control-label"></label>
    @if (Model.User.Speaker)
    {
        <div style="display: block; margin-left: auto; margin-right: auto; width: 50%;">
