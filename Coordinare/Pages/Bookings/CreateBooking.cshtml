@page
@model Coordinare.Pages.Bookings.CreateBookingModel
@{
}

@{
    ViewData["Title"] = "Create Booking";
}

<h4 style="color:black"> Create Booking</h4>





<form method="post">
    <div class="form-group">
        @if (Model.User.Specialaid)
        {
            <div>
                <label asp-for="@Model.CurrentBooking.Special_Seat"></label>
                <input type="checkbox" asp-for="@Model.CurrentBooking.Special_Seat" />
            </div>
        }

    </div>
    <input type="hidden" asp-for="@Model.CurrentBooking.User_ID" />
    <input type="hidden" asp-for="@Model.CurrentBooking.Event_ID" />
    <input type="hidden" asp-for="@Model.CurrentBooking.InWaitingList" />
    <input type="hidden" asp-for="@Model.CurrentBooking.Special_Seat" />
    <input type="hidden" asp-for="@Model.CurrentBooking.BookingDate" />
    <input type="hidden" asp-for="@Model.User" />
    <div class="form-group">
        <button asp-page-handler="Booking" class="btn-primary" >Confirm Booking</button>
    </div>
    <div class="form-group">
        <button asp-page-handler="Return" class="btn-secondary" style="padding-right: 30px; float: left" >back to event overview</button>
    </div>
</form>


