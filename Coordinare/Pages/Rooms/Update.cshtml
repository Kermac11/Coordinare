@page
@model Coordinare.Pages.Rooms.UpdateModel
@{
}
<h3>Update this Room</h3>
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <input type="hidden" asp-for="@Model.OldId"/>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Room.Room_ID" class="control-label"></label>
                <input asp-for="@Model.Room.Room_ID" class="form-control"/>
                <span asp-validation-for="Room.Room_ID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Room.Capacity" class="control-label"></label>
                <input asp-for="@Model.Room.Capacity" class="form-control"/>
                <span asp-validation-for="Room.Capacity" class="text-danger"></span>
            </div>

            <input type="submit" value="Update" class="btn btn-primary"/>
            <a asp-page="./GetAllRooms">Back to List</a>

        </form>
    </div>
</div>

