@page
@model Coordinare.Pages.Events.GetAllEventsModel
@{
}
<a asp-page="/Events/Create">
    <button class="alert-info">Create New Event</button>
</a>
<table class="table table-bordered">
    <thead  class="thead-light">
        <tr>
            <th>
                Event ID
            </th>
            <th>
                Duration
            </th>
            <th>
                Room Id
            </th>
            <th>
                Name
            </th>
            <th>
                Date
            </th>
            <th>
                Event info
            </th>
            <th>
                Special seats
            </th>
            <th>

            </th>
            <th>

            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>
                    @item.Event_ID
                </td>
                <td>
                    @item.Duration
                </td>
                <td>
                    @item.Room_ID
                </td>
                <td>
                    @item.EventName
                </td>
                <td>
                    @item.DateTime
                </td>
                <td>
                    @item.Eventinfo
                </td>
                <td>
                    @item.SS_amount
                </td>
                <td><p><a asp-page="/Events/Info" asp-route-id="@item.Event_ID">See Details</a></p></td>
                <td><p><a asp-page="/Events/Delete" asp-route-id="@item.Event_ID">Delete</a></p></td>
                <td><p><a asp-page="/Events/Update" asp-route-id="@item.Event_ID">Update</a></p></td>
                <td>
                    <p>
                        <a asp-page="/Bookings/EventBookings" asp-route-Event_ID="@item.Event_ID">Bookings</a>
                    </p>
                </td>
            </tr>
        }
</table>